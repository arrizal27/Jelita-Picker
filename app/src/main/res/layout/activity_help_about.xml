<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/ic_background_profil"
    tools:context=".ui.help.AboutActivity">

    <LinearLayout
        android:id="@+id/top2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="16dp"
        android:layout_marginTop="70dp"
        android:orientation="vertical"
        app:layout_constraintTop_toTopOf="parent">

        <FrameLayout
            android:layout_width="60dp"
            android:layout_height="65dp"
            android:layout_gravity="center_vertical"
            android:layout_marginRight="16dp"
            android:paddingVertical="4dp"
            android:layout_marginEnd="16dp">

            <ImageView
                android:id="@+id/img_profil"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/ic_circle_profil"
                android:padding="8dp"
                android:src="@drawable/ic_outline_help_outline_24" />
        </FrameLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="Tentang Kami"
            android:textAppearance="@style/TextAppearance.MaterialComponents.Headline6"
            android:textColor="@color/black" />

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="3dp"
            android:layout_marginTop="20dp"
            android:src="@drawable/ic_line_2"/>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/top3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:layout_marginHorizontal="16dp"
        android:gravity="center_horizontal"
        android:orientation="vertical"
        app:layout_constraintTop_toBottomOf="@+id/top2"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent">

        <ImageView
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:src="@drawable/ic_logo"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="Version 1.0"
            android:textColor="@color/black"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:text=" +62 896-8309-9038"
            android:textColor="@color/black"
            android:drawableLeft="@drawable/ic_baseline_phone_24"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text=" support@jelita.com"
            android:textColor="@color/black"
            android:drawableLeft="@drawable/ic_baseline_email_24"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text=" Jl. Raya Puncak, Bogor, 16750"
            android:textColor="@color/black"
            android:drawableLeft="@drawable/ic_baseline_location_on_24"/>


    </LinearLayout>

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/card_menu"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="12dp"
        android:layout_marginTop="34dp"
        android:layout_marginHorizontal="16dp"
        app:layout_constraintTop_toBottomOf="@id/top3"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_margin="12dp">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Mitra Kami"
                android:textAppearance="@style/TextAppearance.MaterialComponents.Headline6"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp">
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:layout_weight="1">
                    <com.google.android.material.card.MaterialCardView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        app:cardCornerRadius="8dp"
                        app:contentPadding="8dp"
                        app:cardElevation="0dp"
                        android:clickable="true"
                        app:cardBackgroundColor="@color/yellow">
                        <ImageView
                            android:layout_width="35dp"
                            android:layout_height="32dp"
                            android:src="@drawable/ic_baseline_home_24"
                            app:tint="@color/white" />
                    </com.google.android.material.card.MaterialCardView>
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Rumah Tangga"
                        android:textSize="10dp"
                        android:textAppearance="@style/TextAppearance.MaterialComponents.Body2"
                        android:gravity="center"/>
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="1000+"
                        android:textAppearance="@style/TextAppearance.MaterialComponents.Body2"
                        android:gravity="center"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:layout_weight="1"
                    android:layout_marginLeft="16dp">
                    <com.google.android.material.card.MaterialCardView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        app:cardCornerRadius="8dp"
                        android:layout_gravity="center"
                        app:contentPadding="12dp"
                        app:cardElevation="0dp"
                        android:clickable="true"
                        app:cardBackgroundColor="@color/yellow">
                        <ImageView
                            android:layout_width="30dp"
                            android:layout_height="26dp"
                            android:src="@drawable/ic_baseline_people_24"
                            app:tint="@color/white" />
                    </com.google.android.material.card.MaterialCardView>
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Pedagang"
                        android:textSize="10dp"
                        android:textAppearance="@style/TextAppearance.MaterialComponents.Body2"
                        android:gravity="center"/>
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="500+"
                        android:textAppearance="@style/TextAppearance.MaterialComponents.Body2"
                        android:gravity="center"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:layout_weight="1"
                    android:layout_marginLeft="16dp">
                    <com.google.android.material.card.MaterialCardView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        app:cardCornerRadius="8dp"
                        android:layout_gravity="center"
                        app:contentPadding="8dp"
                        app:cardElevation="0dp"
                        android:clickable="true"
                        app:cardBackgroundColor="@color/yellow">
                        <ImageView
                            android:layout_width="35dp"
                            android:layout_height="32dp"
                            android:src="@drawable/ic_baseline_restaurant_24"
                            app:tint="@color/white" />
                    </com.google.android.material.card.MaterialCardView>
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Restaurant"
                        android:textSize="10dp"
                        android:textAppearance="@style/TextAppearance.MaterialComponents.Body2"
                        android:gravity="center"/>
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="300+"
                        android:textAppearance="@style/TextAppearance.MaterialComponents.Body2"
                        android:gravity="center"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:layout_weight="1"
                    android:layout_marginLeft="16dp">
                    <com.google.android.material.card.MaterialCardView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        app:cardCornerRadius="8dp"
                        android:layout_gravity="center"
                        app:contentPadding="8dp"
                        app:cardElevation="0dp"
                        android:clickable="true"
                        app:cardBackgroundColor="@color/yellow">
                        <ImageView
                            android:layout_width="35dp"
                            android:layout_height="32dp"
                            android:src="@drawable/ic_baseline_hotel_24"
                            app:tint="@color/white" />
                    </com.google.android.material.card.MaterialCardView>
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Hotel dan Villa"
                        android:textSize="10dp"
                        android:textAppearance="@style/TextAppearance.MaterialComponents.Body2"
                        android:gravity="center"/>
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="100+"
                        android:textAppearance="@style/TextAppearance.MaterialComponents.Body2"
                        android:gravity="center"/>
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </com.google.android.material.card.MaterialCardView>

</androidx.constraintlayout.widget.ConstraintLayout>